<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="278dp"
        android:orientation="vertical"
        android:background="@drawable/weather1">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="阿尔山"
                android:textSize="15sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="新城街"
                android:textSize="15sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageView

                android:id="@+id/iv_add_city"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="right"
            android:src="@drawable/add_weather"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="27dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="16"
            android:id="@+id/tv_tmp"
            android:textSize="70sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:id="@+id/tv_cond"
                android:text="多云"/>
            <ImageView
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:layout_marginLeft="15sp"
                android:src="@drawable/weatherquality"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginLeft="5sp"
                android:id="@+id/aqi_qlty"
                android:text="空气优"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:textSize="15sp"
                android:id="@+id/tv_aqi"
                android:text="34" />
            <ImageView
                android:layout_width="15sp"
                android:layout_height="20sp"
                android:layout_marginLeft="5sp"
                android:src="@drawable/fanhui"/>
        </LinearLayout>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
        <LinearLayout
            android:layout_marginTop="50dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="东北风"
                    android:id="@+id/now_wind_dir"
                    android:textSize="15sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1级"
                    android:id="@+id/tv_now_wind_spd"
                    android:textSize="23sp"/>
            </LinearLayout>

            <View
                android:layout_width="1dip"
                android:layout_height="30dip"
                android:background="#686868"
                android:layout_marginTop="10dp"

                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="相对湿度"
                    android:textSize="15sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_now_hum"
                    android:text="83%"
                    android:textSize="23sp"/>
            </LinearLayout>
            <View
                android:layout_width="1dip"
                android:layout_height="30dip"
                android:background="#686868"
                android:layout_marginTop="10dp"

                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="体感温度"
                    android:textSize="15sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_now_fl"
                    android:text="16.3"
                    android:textSize="23sp"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    </LinearLayout>



    <RelativeLayout
        android:id="@+id/rl_mid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >
        <RelativeLayout
            android:id="@+id/rl_weather_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/view_weather">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="今天"
                        android:layout_alignParentLeft="true"
                        android:textSize="16sp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_today"
                            android:layout_width="27sp"
                            android:layout_height="27sp"
                            android:src="@drawable/smallrain" />

                        <TextView
                            android:id="@+id/tv_today_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="小雨转中雨"
                            android:textSize="16sp" />

                        <View
                            android:layout_width="1dip"
                            android:layout_marginTop="3dp"
                            android:layout_height="13dip"
                            android:layout_marginLeft="5dp"
                            android:background="#686868" />

                        <TextView
                            android:id="@+id/tv_today_dir"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="东北风"
                            android:textSize="16sp" />
                    </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:id="@+id/tv_max_min"
                        android:text="24/13"
                        android:textSize="17sp" />


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_gravity="center"
                    android:background="#a7a6a6" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="明天"
                        android:layout_alignParentLeft="true"
                        android:textSize="16sp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="27sp"
                            android:layout_height="27sp"
                            android:src="@drawable/smallrain" />

                        <TextView
                            android:id="@+id/tv_tomorrow_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="小雨转中雨"
                            android:textSize="16sp" />

                        <View

                            android:layout_width="1dip"
                            android:layout_marginTop="3dp"
                            android:layout_height="13dip"
                            android:layout_marginLeft="5dp"
                            android:background="#686868" />

                        <TextView
                            android:id="@+id/tv_tomorrow_dir"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="优"
                            android:textSize="16sp" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/tv_tomorrow_max_min"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="24/13"
                        android:textSize="17sp" />


                </RelativeLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_gravity="center"
                    android:background="#a7a6a6" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="后天"
                        android:layout_alignParentLeft="true"
                        android:textSize="16sp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="27sp"
                            android:layout_height="27sp"
                            android:src="@drawable/smallrain" />

                        <TextView
                            android:id="@+id/tv_after_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="小雨转中雨"
                            android:textSize="16sp" />

                        <View
                            android:layout_width="1dip"
                            android:layout_marginTop="3dp"
                            android:layout_height="13dip"
                            android:layout_marginLeft="5dp"
                            android:background="#686868" />

                        <TextView
                            android:id="@+id/tv_after_dir"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="优"
                            android:textSize="16sp" />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_after_max_min"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="24/13"
                        android:textSize="17sp" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>


        <View
            android:id="@+id/view_weather"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_above="@+id/btn_longweather"
            android:background="#a7a6a6" />
        <Button
            android:id="@+id/btn_longweather"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@android:color/transparent"
            android:text="15天趋势预报"/>
    </RelativeLayout>

</LinearLayout>