<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="#7da6dc" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#7da6dc"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="10dp">


        <Button
            android:id="@+id/iv_quxiao_editcity"
           android:layout_alignParentLeft="true"
            android:layout_width="53dp"
            android:layout_height="30dp"
            android:textColor="#ffffff"
            android:background="@drawable/button_cancel"
            android:textSize="13sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="取消"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="#efeeee"
            android:textSize="15sp"
            android:text="城市管理"/>

        <Button
            android:id="@+id/iv_ok_editcity"
            android:layout_width="53dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:textColor="#797878"
            android:background="@drawable/button_select_change"
            android:textSize="13sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="确定"/>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/tv_editcity_line"
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:background="#f2f1f1"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_editcity_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>


</LinearLayout>
