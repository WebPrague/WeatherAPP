        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/iv_welcome"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"/>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

    </LinearLayout>
